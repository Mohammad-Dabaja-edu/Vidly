@using Vidly.Models
@model System.Collections.Generic.List<Vidly.Models.Customer>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Customers</h2>
@if (Model.Count == 0)
{
    <p>we dont have customers</p>
}
else
{
    <table class="table table-bordered">
        <tr><th>Customer</th></tr>
        @foreach(var customer in Model)
        {
            <tr><td><a asp-controller="Customer" asp-action="details" asp-route-id="@customer.Id"> @customer.Name </a></td></tr>
        }
    </table>
}


